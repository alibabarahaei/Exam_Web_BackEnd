@page

@model Exam_Web.Pages.my_account.exam_onlineModel






@section MetaTags
{
   
}

@section Links
{
    <link rel="stylesheet" href="~/css/question.css">
}



    <div class="background_exam" >
        <div class="container" >
            <div class="row text-center align-items-center"
                style="height:85px ; background-color: var(--magenta-middle); border-start-start-radius:10px ;">

                <div class="col">
                    آزمون مطالعات اجتماعی
                </div>
                
            </div>

            <div class="row background_question p-5">

                <form method="post">
                    <input type="hidden"  name="Id_Azmoon" value="@ViewData["IdAzmoon"]">
                    @{foreach (var Question in @Model.QuestionList_Sender.Questions.Select((name, index) => (name, index)))
                      {
                          @Question.index
                          <div class="row mb-4">
                              <div class="col ">
                                  <div class="row mb-2">
                                      <div class="col"><span>1_</span>@Question.name.Question</div>
                                  </div>
                                  <div class="row ">
                                      <div class="col">
                                          <div class="form-check mt-2">
                                              <input class="form-check-input" type="checkbox" asp-for="AnswernList_Reciver[Question.index][0]">
                                              <label class="form-check-label text-break">
                                                  @Question.name.Gozine1
                                              </label>
                                          </div>
                                          <div class="form-check mt-2">
                                              <input class="form-check-input" type="checkbox" asp-for="AnswernList_Reciver[Question.index][1]">
                                              <label class="form-check-label">
                                                  @Question.name.Gozine2
                                              </label>
                                          </div>
                                          <div class="form-check mt-2">
                                              <input class="form-check-input" type="checkbox" asp-for="AnswernList_Reciver[Question.index][2]">
                                              <label class="form-check-label">
                                                  @Question.name.Gozine3
                                              </label>
                                          </div>
                                          <div class="form-check mt-2">
                                              <input class="form-check-input" type="checkbox" asp-for="AnswernList_Reciver[Question.index][3]">
                                              <label class="form-check-label">
                                                  @Question.name.Gozine4
                                              </label>
                                          </div>
                                      </div>
                                  </div>
                              </div>
                          </div>
                      }
                    }
                    <button class="btn-form-login mb-3" type="submit">
                        ورود
                    </button>
                </form>
            </div>
            <div class="row">
                <div class="col">
                    <nav aria-label="...">
                        <ul class="pagination pagination-lg">
                            @{
                                for (int i = 1; i <=  @Model.QuestionList_Sender.PageCount; i++)
                                {
                                    <li class="page-item"><a class="page-link"  asp-route-PageId="@i">@i</a></li>
                                }
                            }
                            

                           
                        </ul>
                    </nav>
                </div>
            </div>



        </div>
    </div>






























