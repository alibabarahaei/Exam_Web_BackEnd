@page
@model Exam_Web.Pages.account.loginModel
@{
}
@section MetaTags
{
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
}

@section Links
{
   <link rel="stylesheet" href="~/css/login.css">
}



<body >
     <div class="main-backgroung" style="background-color: #F8F9FD;" class="align-items-center">
  <div class="container" style="height: 100vh;">
    <div class="row justify-content-center align-items-center ">
      <div class="col-md-6 col-lg-5 col-xl-4 row-main-page row-main-page-right">
        <div class="row text_align_center mb-4">
          <h3>ورود</h3>
        </div>
        <div class="row">
          <form method="post">
            <div class="mb-2">
              <img src="img/people.svg" alt="">
              نام کاربری
            </div>
            <div class="row"  style="height: 72px">
              <div class="col">
                  <input class=" form-control-lg input-form-login " type="text" placeholder="نام کاربری" asp-for="UserName">
                  <span class="text-danger " asp-validation-for="UserName"  style="font-size: 13px"></span>
               </div>
              </div>
            <div class=" mb-2">
                <img src="img/lock.svg" alt="">
                رمز عبور
              </div>
              <div class="row"  style="height: 72px">
                <div class="col">
                    <input class=" form-control-lg input-form-login " type="text" placeholder="رمز عبور" asp-for="Password">
                    <span class="text-danger " asp-validation-for="Password"  style="font-size: 13px"></span>
                </div>
              </div>
              <button class="btn-form-login mb-3" type="submit">
                ورود
              </button>
              <div class="row justify-content-between">
                <div class="col-6 mb-3">
                  <div class="form-check">
                    <input class="form-check-input input-check-remember-me"  type="checkbox" value="" id="flexCheckDefault" asp-for="RememberMe">
                    <label class="form-check-label label-remember-password" for="flexCheckDefault">
                      مرا بخاطر بسپار
                    </label>
                  </div>
                </div>
                <div class="col-5">
                  <a href="" class="a-forgot-password">فراموشی رمز عبور </a>
                </div>
              </div>
              <div class="row justify-content-center login-accounts">
                <a href="#" class="d-flex align-items-center justify-content-center login-account"><i
                    class="fa-brands fa-facebook-f"></i></a>
                <a href="#" class="d-flex align-items-center justify-content-center login-account"><i
                    class="fa-brands fa-google"></i></a>
                <a href=" #" class="d-flex align-items-center justify-content-center login-account"><i
                    class="fa-brands fa-twitter"></i></a>
              </div>
          </form>
        </div>
      </div>
      <div class="col-md-6 col-lg-5 col-xl-4 text_align_center row-main-page row-main-page-left d-none d-md-block">
        <p></p>
      </div>
    </div>

    </div>
     </div>
</body>







